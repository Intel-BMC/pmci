    GIT_REPOSITORY "https://github.com/openbmc/phosphor-logging.git"
    SOURCE_DIR "${CMAKE_BINARY_DIR}/src/phosphor-logging"
    BINARY_DIR "${CMAKE_BINARY_DIR}/libs/phosphor-logging"
